<resources xmlns:ns2="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="HeadinText">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/mainBlack</item>
    </style>
    <style name="SubHeadinText">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/mainBlack</item>
    </style>
    <style name="SubHeadin2Text">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/mainBlack</item>
    </style>
    <style name="InputFieldTitle">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/mainBlack</item>
    </style>
    <style name="InputFieldSubTitle">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/bluey_grey</item>
    </style>
    <style name="InputFieldBox">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingEnd">@dimen/_4sdp</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/mainBlack</item>
    </style>
    <style name="actionButton">
        <item name="cornerRadius">@dimen/_20sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/tea</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="android:textColor">@color/tea</item>
    </style>

    <style name="DialogLoadingTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <!-- parent="android:style/Theme.Dialog" -->
    </style>
</resources>